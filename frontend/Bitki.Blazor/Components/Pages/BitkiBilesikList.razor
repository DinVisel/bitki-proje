@page "/bitkibilesik"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.BitkiBilesikViewModel>
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Bitki Bileşik</PageTitle>

<div class="page-container">
    <h1>Bitki Bileşik İlişkileri</h1>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="BitkiBilesikViewModel" Items="items" Columns="columns" Title="Bitki-Bileşik Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="BitkiBilesikViewModel" Item="selectedItem"
                    Title="@($"Bitki-Bileşik Detayları - ID: {selectedItem.Id}")" Fields="inspectorFields"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@code {
    private BitkiBilesikViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "Bitki ID", PropertyName = "PlantId" },
new ColumnDef { Title = "Bileşik ID", PropertyName = "CompoundId" },
new ColumnDef { Title = "Miktar", PropertyName = "Amount" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
new InspectorField { Label = "Bitki ID", PropertyName = "PlantId", Editable = true },
new InspectorField { Label = "Bileşik ID", PropertyName = "CompoundId", Editable = true },
new InspectorField { Label = "Miktar", PropertyName = "Amount", Editable = true },
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<BitkiBilesikViewModel[]>("api/bitkibilesik");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSave(BitkiBilesikViewModel item)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/bitkibilesik/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(BitkiBilesikViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"ID {item.Id} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/bitkibilesik/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}