@page "/bitkibilesik"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.BitkiBilesikViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Bitki Bileşik</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Bitki Bileşik İlişkileri</h1>
        <AuthorizeView Roles="Admin">
            <Authorized><button class="btn btn-success add-new-btn" @onclick="OpenAddModal"><span>➕</span> Yeni İlişki
                    Ekle</button></Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (errorMessage != null)
    {

        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="BitkiBilesikViewModel" Items="items" Columns="columns" Title="Bitki-Bileşik Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="BitkiBilesikViewModel" Item="selectedItem"
                    Title="@($"Bitki-Bileşik - ID: {selectedItem.Id}")" Fields="inspectorFields" OnSave="HandleSave"
                    OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "İlişki Düzenle" : "Yeni İlişki Ekle")</h5><button type="button" class="btn-close"
                    @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3"><label class="form-label">Bitki ID *</label><input type="number"
                        class="form-control" @bind="editingItem.PlantId" /></div>
                <div class="form-group mb-3"><label class="form-label">Bileşik ID *</label><input type="number"
                        class="form-control" @bind="editingItem.CompoundId" /></div>
                <div class="form-group mb-3"><label class="form-label">Miktar</label><input type="text" class="form-control"
                        @bind="editingItem.Amount" /></div>
                <div class="form-group"><label class="form-label">Açıklama</label><textarea class="form-control" rows="2"
                        @bind="editingItem.Description"></textarea></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">@if (isCreating) {
                    <span class="spinner-border spinner-border-sm me-1"></span>
            }
 @(isEditingInModal ? "Güncelle" :
                                "Kaydet")</button>
        </div>
    </div>
</div>
}

@code {
    private BitkiBilesikViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private BitkiBilesikViewModel editingItem = new();

    private List<ColumnDef> columns = new() { new ColumnDef { Title = "ID", PropertyName = "Id" }, new ColumnDef { Title =
"Bitki ID", PropertyName = "PlantId" }, new ColumnDef { Title = "Bileşik ID", PropertyName = "CompoundId" }, new
ColumnDef { Title = "Miktar", PropertyName = "Amount" } };
    private List<InspectorField> inspectorFields = new() { new InspectorField { Label = "ID", PropertyName = "Id", Editable
= false }, new InspectorField { Label = "Bitki ID", PropertyName = "PlantId", Editable = true }, new InspectorField {
Label = "Bileşik ID", PropertyName = "CompoundId", Editable = true }, new InspectorField { Label = "Miktar",
PropertyName = "Amount", Editable = true }, new InspectorField { Label = "Açıklama", PropertyName = "Description",
Editable = true } };

    protected override async Task OnInitializedAsync() => await LoadData();
    private async Task LoadData()
    {
        isLoading = true; errorMessage = null; try
        {
            items = await
    Http.GetFromJsonAsync<BitkiBilesikViewModel[]>("api/bitkibilesik");
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }
    private void OpenAddModal() { editingItem = new(); isEditingInModal = false; showAddModal = true; }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (editingItem.PlantId == 0 || editingItem.CompoundId == 0) { await JS.InvokeVoidAsync("alert", "Bitki ve Bileşik ID zorunludur."); return; }
        isCreating = true;
        try
        {
            var response = isEditingInModal ? await AuthHttp.PutAsJsonAsync($"api/bitkibilesik/{editingItem.Id}", editingItem) :
            await AuthHttp.PostAsJsonAsync("api/bitkibilesik", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal(); await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(BitkiBilesikViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/bitkibilesik/{item.Id}", item);
            if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Güncellendi"); await LoadData(); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(BitkiBilesikViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"ID {item.Id} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/bitkibilesik/{item.Id}");
                if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Silindi"); await LoadData(); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }
}