@page "/etnokullanim"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.EtnokullanimViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Etnokullanım</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Etnobotanik Kullanım Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized><button class="btn btn-success add-new-btn" @onclick="OpenAddModal"><span>➕</span> Yeni
                    Ekle</button></Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (errorMessage != null)
    {

        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="EtnokullanimViewModel" Items="items" Columns="columns" Title="Etnokullanım Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="EtnokullanimViewModel" Item="selectedItem"
                    Title="@($"Etnokullanım - ID: {selectedItem.Id}")" Fields="inspectorFields" OnSave="HandleSave"
                    OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Düzenle" : "Yeni Ekle")</h5><button type="button" class="btn-close"
                    @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3"><label class="form-label">Açıklama *</label><textarea class="form-control"
                        rows="2" @bind="editingItem.Description"></textarea></div>
                <div class="form-group"><label class="form-label">Lokalite ID</label><input type="number"
                        class="form-control" @bind="editingItem.LocalityId" /></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">@if (isCreating) {
                    <span class="spinner-border spinner-border-sm me-1"></span>
            }
 @(isEditingInModal ? "Güncelle" :
                                "Kaydet")</button>
        </div>
    </div>
</div>
}

@code {
    private EtnokullanimViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private EtnokullanimViewModel editingItem = new();

    private List<ColumnDef> columns = new() { new ColumnDef { Title = "ID", PropertyName = "Id" }, new ColumnDef { Title =
"Açıklama", PropertyName = "Description" }, new ColumnDef { Title = "Lokalite ID", PropertyName = "LocalityId" } };
    private List<InspectorField> inspectorFields = new() { new InspectorField { Label = "ID", PropertyName = "Id", Editable
= false }, new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }, new InspectorField
{ Label = "Lokalite ID", PropertyName = "LocalityId", Editable = true }, new InspectorField { Label = "Oluşturma Tarihi", PropertyName = "CreatedDate", Editable = false } };

    protected override async Task OnInitializedAsync() => await LoadData();
    private async Task LoadData()
    {
        isLoading = true; errorMessage = null; try
        {
            items = await
    Http.GetFromJsonAsync<EtnokullanimViewModel[]>("api/etnokullanim");
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }
    private void OpenAddModal()
    {
        editingItem = new() { CreatedDate = DateTime.Now }; isEditingInModal = false; showAddModal
    = true;
    }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.Description))
        {
            await JS.InvokeVoidAsync("alert", "Açıklama zorunludur.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal ? await AuthHttp.PutAsJsonAsync($"api/etnokullanim/{editingItem.Id}", editingItem) :
            await AuthHttp.PostAsJsonAsync("api/etnokullanim", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal(); await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(EtnokullanimViewModel item)
    {
        try
        {
            var r = await
    AuthHttp.PutAsJsonAsync($"api/etnokullanim/{item.Id}", item); if (r.IsSuccessStatusCode)
            {
                await
    JS.InvokeVoidAsync("alert", "Güncellendi"); await LoadData();
            }
            else if (r.StatusCode ==
    System.Net.HttpStatusCode.Unauthorized) await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            else if (r.StatusCode ==
    System.Net.HttpStatusCode.Forbidden) await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            else await
    JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}");
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(EtnokullanimViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"ID {item.Id} silinsin mi?"))
        {
            try
            {
                var r = await AuthHttp.DeleteAsync($"api/etnokullanim/{item.Id}"); if (r.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi"); await LoadData();
                }
                else if (r.StatusCode ==
                    System.Net.HttpStatusCode.Unauthorized) await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                else if (r.StatusCode ==
                    System.Net.HttpStatusCode.Forbidden) await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                else await
                    JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}");
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }
}