@page "/etnokullanim"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Bitki.Blazor.Components.Common
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.EtnokullanimViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Etnokullanım</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Etnobotanik Kullanım Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="EtnokullanimViewModel" Items="items" Columns="columns" Title="Etnokullanım Kayıtları"
            ShowSearch="true" IsLoading="isLoading" TotalCount="totalCount" FilteredCount="filteredCount"
            OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="EtnokullanimViewModel" Item="selectedItem"
                    Title="@($"Etnokullanım - {selectedItem.Description}")" Fields="inspectorFields" ViewOnly="false"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Düzenle" : "Yeni Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Açıklama *</label>
                    <textarea class="form-control" rows="2" @bind="editingItem.Description"></textarea>
                </div>
                <div class="form-group">
                    <label class="form-label">Lokalite</label>
                    <SearchableSelect Options="localityOptions" Placeholder="Lokalite seçin" @bind-Value="EditingLocalityId" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private EtnokullanimViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<EtnokullanimViewModel> paginationState = new();
    private FilterRequest currentFilter = new();

    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private EtnokullanimViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Açıklama", PropertyName = "Description" },
new ColumnDef { Title = "Lokalite", PropertyName = "LocalityName" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true },
new InspectorField { Label = "Lokalite", PropertyName = "LocalityName", Editable = true, RenderEditControl = LocalitySelector },
new InspectorField { Label = "Oluşturma Tarihi", PropertyName = "CreatedDate", Editable = false }
};

    protected override async Task OnInitializedAsync() => await LoadDataWithFilter();

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            await EnsureOptionsAsync();
            var response = await Http.PostAsJsonAsync("api/etnokullanim/query", currentFilter);
            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<EtnokullanimViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else { errorMessage = $"Error: {response.StatusCode}"; }
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    private void OpenAddModal()
    {
        editingItem = new() { CreatedDate = DateTime.Now };
        EditingLocalityId = null;
        isEditingInModal = false;
        showAddModal = true;
    }

    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.Description))
        {
            await JS.InvokeVoidAsync("alert", "Açıklama zorunludur.");
            return;
        }
        if (EditingLocalityId == null)
        {
            await JS.InvokeVoidAsync("alert", "Lokalite seçilmelidir.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal
            ? await AuthHttp.PutAsJsonAsync($"api/etnokullanim/{editingItem.Id}", editingItem)
            : await AuthHttp.PostAsJsonAsync("api/etnokullanim", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(EtnokullanimViewModel item)
    {
        try
        {
            SyncLocality(item);
            var r = await AuthHttp.PutAsJsonAsync($"api/etnokullanim/{item.Id}", item);
            if (r.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Güncellendi");
                await LoadDataWithFilter();
            }
            else if (r.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (r.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(EtnokullanimViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.LocalityName} kaydı silinsin mi?"))
        {
            try
            {
                var r = await AuthHttp.DeleteAsync($"api/etnokullanim/{item.Id}");
                if (r.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi");
                    await LoadDataWithFilter();
                }
                else if (r.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                }
                else if (r.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }

    private List<SelectOption> localityOptions = new();

    private long? EditingLocalityId
    {
        get => editingItem.LocalityId == 0 ? null : editingItem.LocalityId;
        set
        {
            editingItem.LocalityId = value.HasValue ? (int)value.Value : 0;
            editingItem.LocalityName = localityOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private async Task EnsureOptionsAsync()
    {
        if (!localityOptions.Any())
        {
            var localities = await Http.GetFromJsonAsync<List<EtnolokaliteViewModel>>("api/etnolokalite") ?? new();
            localityOptions = localities.OrderBy(l => l.LocalName).Select(l => new SelectOption(l.Id, l.LocalName ?? $"Lokalite #{l.Id}")).ToList();
        }
    }

    private void SyncLocality(EtnokullanimViewModel item)
    {
        item.LocalityName = localityOptions.FirstOrDefault(o => o.Id == item.LocalityId)?.Name ?? item.LocalityName;
    }

    private RenderFragment<EtnokullanimViewModel> LocalitySelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", localityOptions);
        builder.AddAttribute(2, "Placeholder", "Lokalite seçin");
        builder.AddAttribute(3, "Value", (long?)item.LocalityId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id => { item.LocalityId = id.HasValue ? (int)id.Value : 0; SyncLocality(item); }));
        builder.CloseComponent();
    };
}
