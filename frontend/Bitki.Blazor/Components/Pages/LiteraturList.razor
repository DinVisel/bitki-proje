@page "/literatur"
@using Bitki.Blazor.Models
@inject HttpClient Http

<h3>Literatür Listesi</h3>

@if (items == null)
{
    <p><em>Yükleniyor...</em></p>
}
else
{
    <p>Kayıt Sayısı: @items.Length</p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Yazar</th>
                <th>Araştırma</th>
                <th>Kaynak</th>
                <th>Yıl</th>
                <th>Tam Adı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AuthorName</td>
                    <td>@item.ResearchName</td>
                    <td>@item.SourceName</td>
                    <td>@item.Year</td>
                    <td>@item.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private LiteraturViewModel[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<LiteraturViewModel[]>("api/literatur");
    }
}