@page "/literatur"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.LiteraturViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Literatur</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Literatur Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Literatur Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="LiteraturViewModel" Items="items" Columns="columns" Title="Literatur Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="LiteraturViewModel" Item="selectedItem"
                    Title="@($"Literatur Detayları - {selectedItem.AuthorName}")" Fields="inspectorFields"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@* Add/Edit Modal *@
@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content modal-large" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Literatur Düzenle" : "Yeni Literatur Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Yazar Adı *</label>
                        <input type="text" class="form-control" @bind="editingItem.AuthorName" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Yıl</label>
                        <input type="number" class="form-control" @bind="editingItem.Year" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Araştırma Adı</label>
                    <input type="text" class="form-control" @bind="editingItem.ResearchName" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Kaynak Adı</label>
                        <input type="text" class="form-control" @bind="editingItem.SourceName" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tam Ad</label>
                        <input type="text" class="form-control" @bind="editingItem.FullName" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Tip</label>
                        <input type="text" class="form-control" @bind="editingItem.Type" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Konu Tipi</label>
                        <input type="text" class="form-control" @bind="editingItem.TopicType" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Güvenilirlik</label>
                        <input type="text" class="form-control" @bind="editingItem.Reliability" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Link</label>
                        <input type="text" class="form-control" @bind="editingItem.Link" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Özet</label>
                    <textarea class="form-control" rows="4" @bind="editingItem.Summary"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private LiteraturViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    // Add/Edit Modal State
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private LiteraturViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "Yazar", PropertyName = "AuthorName" },
new ColumnDef { Title = "Araştırma", PropertyName = "ResearchName" },
new ColumnDef { Title = "Yıl", PropertyName = "Year" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
new InspectorField { Label = "Yazar Adı", PropertyName = "AuthorName", Editable = true },
new InspectorField { Label = "Araştırma Adı", PropertyName = "ResearchName", Editable = true },
new InspectorField { Label = "Kaynak Adı", PropertyName = "SourceName", Editable = true },
new InspectorField { Label = "Yıl", PropertyName = "Year", Editable = true },
new InspectorField { Label = "Tam Ad", PropertyName = "FullName", Editable = true },
new InspectorField { Label = "Link", PropertyName = "Link", Editable = true },
new InspectorField { Label = "Tip", PropertyName = "Type", Editable = true },
new InspectorField { Label = "Konu Tipi", PropertyName = "TopicType", Editable = true },
new InspectorField { Label = "Güvenilirlik", PropertyName = "Reliability", Editable = true },
new InspectorField { Label = "Özet", PropertyName = "Summary", Editable = true }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<LiteraturViewModel[]>("api/literatur");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenAddModal()
    {
        editingItem = new LiteraturViewModel();
        isEditingInModal = false;
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        editingItem = new LiteraturViewModel();
        isEditingInModal = false;
    }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.AuthorName))
        {
            await JS.InvokeVoidAsync("alert", "Yazar adı zorunludur.");
            return;
        }

        isCreating = true;

        try
        {
            HttpResponseMessage response;

            if (isEditingInModal)
            {
                response = await AuthHttp.PutAsJsonAsync($"api/literatur/{editingItem.Id}", editingItem);
            }
            else
            {
                response = await AuthHttp.PostAsJsonAsync("api/literatur", editingItem);
            }

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Literatur başarıyla güncellendi!" : "Literatur başarıyla eklendi!");
                CloseAddModal();
                await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"İşlem hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task HandleSave(LiteraturViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/literatur/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(LiteraturViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.AuthorName} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/literatur/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}