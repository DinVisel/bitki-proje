@page "/bilesikler"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.BilesiklerViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Bileşikler</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Bileşikler Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Bileşik Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="BilesiklerViewModel" Items="items" Columns="columns" Title="Bileşik Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="BilesiklerViewModel" Item="selectedItem"
                    Title="@($"Bileşik Detayları - {selectedItem.Name}")" Fields="inspectorFields" OnSave="HandleSave"
                    OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@* Add/Edit Modal *@
@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Bileşik Düzenle" : "Yeni Bileşik Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Ad *</label>
                    <input type="text" class="form-control" @bind="editingItem.Name" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">İngilizce Ad</label>
                        <input type="text" class="form-control" @bind="editingItem.EnglishName" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Latince Ad</label>
                        <input type="text" class="form-control" @bind="editingItem.LatinName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Açıklama</label>
                    <textarea class="form-control" rows="4" @bind="editingItem.Description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private BilesiklerViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    // Add/Edit Modal State
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private BilesiklerViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "Ad", PropertyName = "Name" },
new ColumnDef { Title = "İngilizce Ad", PropertyName = "EnglishName" },
new ColumnDef { Title = "Latince Ad", PropertyName = "LatinName" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
new InspectorField { Label = "Ad", PropertyName = "Name", Editable = true },
new InspectorField { Label = "İngilizce Ad", PropertyName = "EnglishName", Editable = true },
new InspectorField { Label = "Latince Ad", PropertyName = "LatinName", Editable = true },
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<BilesiklerViewModel[]>("api/bilesikler");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenAddModal()
    {
        editingItem = new BilesiklerViewModel();
        isEditingInModal = false;
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        editingItem = new BilesiklerViewModel();
        isEditingInModal = false;
    }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.Name))
        {
            await JS.InvokeVoidAsync("alert", "Ad alanı zorunludur.");
            return;
        }

        isCreating = true;

        try
        {
            HttpResponseMessage response;

            if (isEditingInModal)
            {
                response = await AuthHttp.PutAsJsonAsync($"api/bilesikler/{editingItem.Id}", editingItem);
            }
            else
            {
                response = await AuthHttp.PostAsJsonAsync("api/bilesikler", editingItem);
            }

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Bileşik başarıyla güncellendi!" : "Bileşik başarıyla eklendi!");
                CloseAddModal();
                await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"İşlem hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task HandleSave(BilesiklerViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/bilesikler/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(BilesiklerViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.Name} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/bilesikler/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}