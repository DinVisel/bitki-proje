@page "/kisiler"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.KisilerViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Kişiler</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Kişiler Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized><button class="btn btn-success add-new-btn" @onclick="OpenAddModal"><span>➕</span> Yeni Kişi
                    Ekle</button></Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (errorMessage != null)
    {

        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="KisilerViewModel" Items="items" Columns="columns" Title="Kişi Kayıtları" ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="KisilerViewModel" Item="selectedItem" Title="@($"Kişi - {selectedItem.FullName}")"
                    Fields="inspectorFields" OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Kişi Düzenle" : "Yeni Kişi Ekle")</h5><button type="button" class="btn-close"
                    @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3"><label class="form-label">Ad *</label><input type="text" class="form-control"
                        @bind="editingItem.FirstName" /></div>
                <div class="form-group mb-3"><label class="form-label">Soyad *</label><input type="text"
                        class="form-control" @bind="editingItem.LastName" /></div>
                <div class="form-group"><label class="form-label">Tam Ad</label><input type="text" class="form-control"
                        @bind="editingItem.FullName" /></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">@if (isCreating) {
                    <span class="spinner-border spinner-border-sm me-1"></span>
            }
 @(isEditingInModal ? "Güncelle" :
                                "Kaydet")</button>
        </div>
    </div>
</div>
}

@code {
    private KisilerViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private KisilerViewModel editingItem = new();

    private List<ColumnDef> columns = new() { new ColumnDef { Title = "ID", PropertyName = "Id" }, new ColumnDef { Title =
"Tam Ad", PropertyName = "FullName" }, new ColumnDef { Title = "Ad", PropertyName = "FirstName" }, new ColumnDef { Title
= "Soyad", PropertyName = "LastName" } };
    private List<InspectorField> inspectorFields = new() { new InspectorField { Label = "ID", PropertyName = "Id", Editable
= false }, new InspectorField { Label = "Tam Ad", PropertyName = "FullName", Editable = true }, new InspectorField {
Label = "Ad", PropertyName = "FirstName", Editable = true }, new InspectorField { Label = "Soyad", PropertyName =
"LastName", Editable = true } };

    protected override async Task OnInitializedAsync() => await LoadData();
    private async Task LoadData()
    {
        isLoading = true; errorMessage = null; try
        {
            items = await
    Http.GetFromJsonAsync<KisilerViewModel[]>("api/kisiler");
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }
    private void OpenAddModal() { editingItem = new(); isEditingInModal = false; showAddModal = true; }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.FirstName)) { await JS.InvokeVoidAsync("alert", "Ad zorunludur."); return; }
        isCreating = true;
        try
        {
            var response = isEditingInModal ? await AuthHttp.PutAsJsonAsync($"api/kisiler/{editingItem.Id}", editingItem) : await
            AuthHttp.PostAsJsonAsync("api/kisiler", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal(); await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(KisilerViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/kisiler/{item.Id}", item);
            if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Güncellendi"); await LoadData(); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(KisilerViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.FullName} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/kisiler/{item.Id}");
                if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Silindi"); await LoadData(); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }
}