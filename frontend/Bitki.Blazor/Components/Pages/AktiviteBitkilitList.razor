@page "/aktivitebitkilit"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.AktiviteBitkilitViewModel>
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Aktivite Bitki Literatür</PageTitle>

<div class="page-container">
    <h1>Aktivite Bitki Literatür Veritabanı</h1>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="AktiviteBitkilitViewModel" Items="items" Columns="columns"
            Title="Aktivite Bitki Literatür Kayıtları" ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="AktiviteBitkilitViewModel" Item="selectedItem"
                    Title="@($"Aktivite Bitki Literatür - {selectedItem.TurkishName}")" Fields="inspectorFields"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@code {
    private AktiviteBitkilitViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "Türkçe Ad", PropertyName = "TurkishName" },
new ColumnDef { Title = "Durum", PropertyName = "Status" },
new ColumnDef { Title = "Literatür ID", PropertyName = "LiteratureId" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
new InspectorField { Label = "Türkçe Ad", PropertyName = "TurkishName", Editable = true },
new InspectorField { Label = "Durum", PropertyName = "Status", Editable = true },
new InspectorField { Label = "Literatür ID", PropertyName = "LiteratureId", Editable = true },
new InspectorField { Label = "Familya ID", PropertyName = "FamilyId", Editable = true },
new InspectorField { Label = "Genus ID", PropertyName = "GenusId", Editable = true }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<AktiviteBitkilitViewModel[]>("api/aktivitebitkilit");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSave(AktiviteBitkilitViewModel item)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/aktivitebitkilit/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(AktiviteBitkilitViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.TurkishName} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/aktivitebitkilit/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}