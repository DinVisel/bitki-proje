@page "/aktivitebitkilit"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.AktiviteBitkilitViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Aktivite Bitki Literatür</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Aktivite Bitki Literatür Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized><button class="btn btn-success add-new-btn" @onclick="OpenAddModal"><span>➕</span> Yeni
                    Ekle</button></Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (errorMessage != null)
    {

        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="AktiviteBitkilitViewModel" Items="items" Columns="columns"
            Title="Aktivite Bitki Literatür Kayıtları" ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="AktiviteBitkilitViewModel" Item="selectedItem"
                    Title="@($"Aktivite Bitki Literatür - {selectedItem.TurkishName}")" Fields="inspectorFields"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Düzenle" : "Yeni Ekle")</h5><button type="button" class="btn-close"
                    @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3"><label class="form-label">Türkçe Ad *</label><input type="text"
                        class="form-control" @bind="editingItem.TurkishName" /></div>
                <div class="form-group mb-3"><label class="form-label">Durum</label><input type="text" class="form-control"
                        @bind="editingItem.Status" /></div>
                <div class="form-group mb-3"><label class="form-label">Literatür ID</label><input type="number"
                        class="form-control" @bind="editingItem.LiteratureId" /></div>
                <div class="form-group mb-3"><label class="form-label">Familya ID</label><input type="number"
                        class="form-control" @bind="editingItem.FamilyId" /></div>
                <div class="form-group"><label class="form-label">Genus ID</label><input type="number" class="form-control"
                        @bind="editingItem.GenusId" /></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">@if (isCreating) {
                    <span class="spinner-border spinner-border-sm me-1"></span>
            }
 @(isEditingInModal ? "Güncelle" :
                                "Kaydet")</button>
        </div>
    </div>
</div>
}

@code {
    private AktiviteBitkilitViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private AktiviteBitkilitViewModel editingItem = new();

    private List<ColumnDef> columns = new() { new ColumnDef { Title = "ID", PropertyName = "Id" }, new ColumnDef { Title =
"Türkçe Ad", PropertyName = "TurkishName" }, new ColumnDef { Title = "Durum", PropertyName = "Status" }, new ColumnDef {
Title = "Literatür ID", PropertyName = "LiteratureId" } };
    private List<InspectorField> inspectorFields = new() { new InspectorField { Label = "ID", PropertyName = "Id", Editable
= false }, new InspectorField { Label = "Türkçe Ad", PropertyName = "TurkishName", Editable = true }, new InspectorField
{ Label = "Durum", PropertyName = "Status", Editable = true }, new InspectorField { Label = "Literatür ID", PropertyName
= "LiteratureId", Editable = true }, new InspectorField { Label = "Familya ID", PropertyName = "FamilyId", Editable =
true }, new InspectorField { Label = "Genus ID", PropertyName = "GenusId", Editable = true } };

    protected override async Task OnInitializedAsync() => await LoadData();
    private async Task LoadData()
    {
        isLoading = true; errorMessage = null; try
        {
            items = await
    Http.GetFromJsonAsync<AktiviteBitkilitViewModel[]>("api/aktivitebitkilit");
        }
        catch (Exception ex)
        {
            errorMessage =
    $"Error: {ex.Message}";
        }
        finally { isLoading = false; }
    }
    private void OpenAddModal() { editingItem = new(); isEditingInModal = false; showAddModal = true; }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.TurkishName))
        {
            await JS.InvokeVoidAsync("alert", "Türkçe Ad zorunludur.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal ? await AuthHttp.PutAsJsonAsync($"api/aktivitebitkilit/{editingItem.Id}", editingItem) :
            await AuthHttp.PostAsJsonAsync("api/aktivitebitkilit", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal(); await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(AktiviteBitkilitViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/aktivitebitkilit/{item.Id}", item);
            if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Güncellendi"); await LoadData(); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(AktiviteBitkilitViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.TurkishName} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/aktivitebitkilit/{item.Id}");
                if (response.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Silindi"); await LoadData(); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }
}