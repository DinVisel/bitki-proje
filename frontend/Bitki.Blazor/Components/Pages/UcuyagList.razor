@page "/ucuyag"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.UcuyagViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Uçucu Yağ</PageTitle>

<div class="page-container">
    @* Page Header with Add Button *@
    <div class="page-header">
        <h1>Uçucu Yağ Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Uçucu Yağ Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="UcuyagViewModel" Items="items" Columns="columns" Title="Uçucu Yağ Kayıtları"
            ShowSearch="true" IsLoading="isLoading" TotalCount="totalCount" FilteredCount="filteredCount"
            OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="UcuyagViewModel" Item="selectedItem"
                    Title="@($"Uçucu Yağ Detayları - {selectedItem.Name}")" Fields="inspectorFields" ViewOnly="true" />
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@* Add/Edit Modal *@
@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Uçucu Yağ Düzenle" : "Yeni Uçucu Yağ Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Ad *</label>
                    <input type="text" class="form-control" @bind="editingItem.Name" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Yerel Ad</label>
                    <input type="text" class="form-control" @bind="editingItem.LocalName" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Kullanım</label>
                    <textarea class="form-control" rows="4" @bind="editingItem.Usage"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private UcuyagViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<UcuyagViewModel> paginationState = new FilterResponse<UcuyagViewModel>();

    private FilterRequest currentFilter = new FilterRequest();

    // Add/Edit Modal State
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private UcuyagViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Ad", PropertyName = "Name" },
new ColumnDef { Title = "Yerel Ad", PropertyName = "LocalName" },
new ColumnDef { Title = "Kullanım", PropertyName = "Usage" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "Ad", PropertyName = "Name", Editable = true, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "Yerel Ad", PropertyName = "LocalName", Editable = true, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "Kullanım", PropertyName = "Usage", Editable = true, FieldGroup = "Kullanım Bilgileri" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/ucuyag/query", currentFilter);

            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<UcuyagViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else
            {
                errorMessage = $"Error loading data: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    // Add Modal Methods
    private void OpenAddModal()
    {
        editingItem = new UcuyagViewModel();
        isEditingInModal = false;
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        editingItem = new UcuyagViewModel();
        isEditingInModal = false;
    }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.Name))
        {
            await JS.InvokeVoidAsync("alert", "Ad alanı zorunludur.");
            return;
        }

        isCreating = true;

        try
        {
            HttpResponseMessage response;

            if (isEditingInModal)
            {
                response = await AuthHttp.PutAsJsonAsync($"api/ucuyag/{editingItem.Id}", editingItem);
            }
            else
            {
                response = await AuthHttp.PostAsJsonAsync("api/ucuyag", editingItem);
            }

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Uçucu yağ başarıyla güncellendi!" : "Uçucu yağ başarıyla eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"İşlem hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task HandleSave(UcuyagViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/ucuyag/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(UcuyagViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.Name} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/ucuyag/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Yetkisiz işlem. Lütfen giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Bu işlem için Admin yetkisi gereklidir.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}