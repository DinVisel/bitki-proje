@page "/ucuyag"
@using Bitki.Blazor.Models
@inject HttpClient Http

<h3>Uçucu Yağ Listesi</h3>

@if (items == null)
{
    <p><em>Yükleniyor...</em></p>
}
else
{
    <p>Kayıt Sayısı: @items.Length</p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>Yerel Adı</th>
                <th>Kullanım</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.LocalName</td>
                    <td>@item.Usage</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private UcuyagViewModel[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<UcuyagViewModel[]>("api/ucuyag");
    }
}