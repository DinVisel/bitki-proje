@page "/bitki"
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@inject HttpClient Http
@inject IJSRuntime JS

@if (bitkiler == null)
{
    if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
}
else
{
    <div class="container-fluid mt-4">
        <DataGrid TItem="BitkiViewModel" Items="bitkiler" Columns="columns" Title="Bitkiler Veritabanı" OnEdit="HandleEdit"
            OnDelete="HandleDelete" />
    </div>
}

@code {
    private List<BitkiViewModel>? bitkiler;
    private bool isLoading = true;
    private string errorMessage = "No data returned";

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Ad", PropertyName = "Name" },
new ColumnDef { Title = "Latince Ad", PropertyName = "LatinName" },
new ColumnDef { Title = "Aile", PropertyName = "Family" },
new ColumnDef { Title = "Açıklama", PropertyName = "Description" }
};

    protected override async Task OnInitializedAsync()
    {
        try
        {
            bitkiler = await Http.GetFromJsonAsync<List<BitkiViewModel>>("api/bitki");
            isLoading = false;
        }
        catch (Exception ex)
        {
            isLoading = false;
            errorMessage = $"Error fetching data: {ex.Message}";
            Console.WriteLine(ex);
        }
    }

    private async Task HandleEdit(BitkiViewModel item)
    {
        // Placeholder for edit logic
        await JS.InvokeVoidAsync("alert", $"Edit requested for: {item.Name} (ID: {item.Id})");
    }

    private async Task HandleDelete(BitkiViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {item.Name}?"))
        {
            // Placeholder for delete logic
            await JS.InvokeVoidAsync("alert", $"Delete requested for ID: {item.Id}");
        }
    }
}