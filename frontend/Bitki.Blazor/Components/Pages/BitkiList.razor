@code {
    private BitkiViewModel[]? bitkiler;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<BitkiViewModel> paginationState = new FilterResponse<BitkiViewModel>();

    private FilterRequest currentFilter = new FilterRequest();

    // Add Modal State
    private bool showAddModal = false;
    private bool isCreating = false;
    private BitkiViewModel newBitki = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "TÃ¼rkÃ§e Ad", PropertyName = "Name" },
new ColumnDef { Title = "Latince Ad", PropertyName = "LatinName" },
new ColumnDef { Title = "AÃ§Ä±klama", PropertyName = "Description" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "TÃ¼rkÃ§e Ad", PropertyName = "Name", Editable = true, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "Latince Ad", PropertyName = "LatinName", Editable = true, FieldGroup = "Taksonomi" },
new InspectorField { Label = "Aile", PropertyName = "Family", Editable = true, FieldGroup = "Taksonomi" },
new InspectorField { Label = "AÃ§Ä±klama", PropertyName = "Description", Editable = true, FieldGroup = "Ek Bilgiler" },
new InspectorField { Label = "Habitat", PropertyName = "Habitat", Editable = true, FieldGroup = "Ek Bilgiler" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/bitki/query", currentFilter);

            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<BitkiViewModel>>();
                if (filterResponse != null)
                {
                    bitkiler = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else
            {
                errorMessage = $"Error loading data: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    // Add Modal Methods
    private void OpenAddModal()
    {
        newBitki = new BitkiViewModel();
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        newBitki = new BitkiViewModel();
    }

    private async Task HandleCreate()
    {
        if (string.IsNullOrWhiteSpace(newBitki.Name))
        {
            await JS.InvokeVoidAsync("alert", "TÃ¼rkÃ§e ad alanÄ± zorunludur.");
            return;
        }

        isCreating = true;

        try
        {
            var response = await AuthHttp.PostAsJsonAsync("api/bitki", newBitki);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Bitki baÅŸarÄ±yla eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz iÅŸlem. LÃ¼tfen giriÅŸ yapÄ±n.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu iÅŸlem iÃ§in Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Ekleme hatasÄ±: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task HandleSave(BitkiViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/bitki/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "KayÄ±t baÅŸarÄ±yla gÃ¼ncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz iÅŸlem. LÃ¼tfen giriÅŸ yapÄ±n.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu iÅŸlem iÃ§in Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"GÃ¼ncelleme hatasÄ±: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(BitkiViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.Name} kaydÄ±nÄ± silmek istediÄŸinizden emin misiniz?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/bitki/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "KayÄ±t baÅŸarÄ±yla silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Yetkisiz iÅŸlem. LÃ¼tfen giriÅŸ yapÄ±n.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Bu iÅŸlem iÃ§in Admin yetkisi gereklidir.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatasÄ±: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}