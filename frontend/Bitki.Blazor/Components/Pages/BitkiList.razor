@code {
    private BitkiViewModel[]? bitkiler;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<BitkiViewModel> paginationState = new FilterResponse<BitkiViewModel>();

    private FilterRequest currentFilter = new FilterRequest();

    // Add/Edit Modal State
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private string modalTab = "basic";
    private BitkiViewModel newBitki = new();
    private BitkiViewModel editingBitki = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "T√ºrk√ße Ad", PropertyName = "Name" },
new ColumnDef { Title = "Latince Ad", PropertyName = "LatinName" },
new ColumnDef { Title = "A√ßƒ±klama", PropertyName = "Description" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "T√ºrk√ße Ad", PropertyName = "Name", Editable = true, FieldGroup = "Genel Bilgiler" },
new InspectorField { Label = "Latince Ad", PropertyName = "LatinName", Editable = true, FieldGroup = "Taksonomi" },
new InspectorField { Label = "Aile", PropertyName = "Family", Editable = true, FieldGroup = "Taksonomi" },
new InspectorField { Label = "A√ßƒ±klama", PropertyName = "Description", Editable = true, FieldGroup = "Ek Bilgiler" },
new InspectorField { Label = "Habitat", PropertyName = "Habitat", Editable = true, FieldGroup = "Ek Bilgiler" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/bitki/query", currentFilter);

            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<BitkiViewModel>>();
                if (filterResponse != null)
                {
                    bitkiler = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else
            {
                errorMessage = $"Error loading data: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    // Add Modal Methods
    private void OpenAddModal()
    {
        editingBitki = new BitkiViewModel();
        isEditingInModal = false;
        modalTab = "basic";
        showAddModal = true;
    }

    private void OpenEditModal(BitkiViewModel item)
    {
        // Copy item to editing model
        editingBitki = new BitkiViewModel
        {
            Id = item.Id,
            Name = item.Name,
            LatinName = item.LatinName,
            Description = item.Description,
            Family = item.Family,
            Habitat = item.Habitat,
            FamilyId = item.FamilyId,
            GenusId = item.GenusId,
            GenusName = item.GenusName,
            CommonNames = item.CommonNames,
            Status = item.Status,
            IsMedicinal = item.IsMedicinal,
            IsFood = item.IsFood,
            IsCultural = item.IsCultural,
            IsPoisonous = item.IsPoisonous,
            IsTurkishFlora = item.IsTurkishFlora,
            IsIslandSpecies = item.IsIslandSpecies,
            ExistenceDoubtful = item.ExistenceDoubtful,
            NeedsRevision = item.NeedsRevision,
            IsExtinct = item.IsExtinct,
            IncompleteIdentification = item.IncompleteIdentification,
            ControlOk = item.ControlOk,
            PublicationOk = item.PublicationOk,
            Otor = item.Otor,
            BasionymOtor = item.BasionymOtor,
            Year = item.Year,
            Pages = item.Pages,
            TaxonName = item.TaxonName,
            TaxonOtor = item.TaxonOtor,
            TaxonLevel = item.TaxonLevel,
            TaxonKind = item.TaxonKind,
            Synonym = item.Synonym,
            SynonymOtor = item.SynonymOtor,
            Endemism = item.Endemism,
            EndemismDescription = item.EndemismDescription,
            FloweringTime = item.FloweringTime,
            Altitude = item.Altitude,
            Distribution = item.Distribution,
            Phytogeography = item.Phytogeography,
            Notes = item.Notes,
            References = item.References,
            AdditionalInfo = item.AdditionalInfo
        };
        isEditingInModal = true;
        modalTab = "basic";
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        editingBitki = new BitkiViewModel();
        isEditingInModal = false;
        modalTab = "basic";
    }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingBitki.Name))
        {
            await JS.InvokeVoidAsync("alert", "T√ºrk√ße ad alanƒ± zorunludur.");
            return;
        }

        isCreating = true;

        try
        {
            HttpResponseMessage response;

            if (isEditingInModal)
            {
                response = await AuthHttp.PutAsJsonAsync($"api/bitki/{editingBitki.Id}", editingBitki);
            }
            else
            {
                response = await AuthHttp.PostAsJsonAsync("api/bitki", editingBitki);
            }

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Bitki ba≈üarƒ±yla g√ºncellendi!" : "Bitki ba≈üarƒ±yla eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz i≈ülem. L√ºtfen giri≈ü yapƒ±n.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu i≈ülem i√ßin Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"ƒ∞≈ülem hatasƒ±: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task HandleSave(BitkiViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/bitki/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayƒ±t ba≈üarƒ±yla g√ºncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Yetkisiz i≈ülem. L√ºtfen giri≈ü yapƒ±n.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Bu i≈ülem i√ßin Admin yetkisi gereklidir.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"G√ºncelleme hatasƒ±: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(BitkiViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.Name} kaydƒ±nƒ± silmek istediƒüinizden emin misiniz?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/bitki/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayƒ±t ba≈üarƒ±yla silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Yetkisiz i≈ülem. L√ºtfen giri≈ü yapƒ±n.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Bu i≈ülem i√ßin Admin yetkisi gereklidir.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatasƒ±: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}