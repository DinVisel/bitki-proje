@page "/"
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient Http

<h3>Plants</h3>

<button @onclick="ShowAddForm">Add New Plant</button>

@if (plants == null)
{
    <p>Loading...</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Latin Name</th>
                <th>Family</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plant in plants)
            {
                <tr>
                    <td>@plant.Name</td>
                    <td>@plant.LatinName</td>
                    <td>@plant.Family</td>
                    <td>
                        <button @onclick="() => EditPlant(plant)">Edit</button>
                        <button @onclick="() => DeletePlant(plant.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showForm)
{
    <h4>@(isEditMode ? "Edit Plant" : "Add Plant")</h4>

    <EditForm Model="currentPlant" OnValidSubmit="SavePlant">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <input placeholder="Name" @bind="currentPlant.Name" />
        <input placeholder="Latin Name" @bind="currentPlant.LatinName" />
        <input placeholder="Family" @bind="currentPlant.Family" />
        <input placeholder="Habitat" @bind="currentPlant.Habitat" />
        <textarea placeholder="Description" @bind="currentPlant.Description"></textarea>

        <button type="submit">Save</button>
        <button type="button" @onclick="Cancel">Cancel</button>
    </EditForm>
}

@code {
    List<Bitki.Blazor.Models.Plant> plants;
    Bitki.Blazor.Models.Plant currentPlant = new();
    bool showForm = false;
    bool isEditMode = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPlants();
    }

    async Task LoadPlants()
    {
        try
        {
            plants = await Http.GetFromJsonAsync<List<Bitki.Blazor.Models.Plant>>("api/bitki");
        }
        catch
        {
            // Simple error handling for connectivity issues
        }
    }

    void ShowAddForm()
    {
        currentPlant = new Bitki.Blazor.Models.Plant();
        isEditMode = false;
        showForm = true;
    }

    void EditPlant(Bitki.Blazor.Models.Plant plant)
    {
        currentPlant = new Bitki.Blazor.Models.Plant
        {
            Id = plant.Id,
            Name = plant.Name,
            LatinName = plant.LatinName,
            Family = plant.Family,
            Habitat = plant.Habitat,
            Description = plant.Description
        };

        isEditMode = true;
        showForm = true;
    }

    async Task SavePlant()
    {
        if (isEditMode)
        {
            await Http.PutAsJsonAsync($"api/plants/{currentPlant.Id}", currentPlant);
        }
        else
        {
            await Http.PostAsJsonAsync("api/plants", currentPlant);
        }

        showForm = false;
        await LoadPlants();
    }

    async Task DeletePlant(int id)
    {
        await Http.DeleteAsync($"api/plants/{id}");
        await LoadPlants();
    }

    void Cancel()
    {
        showForm = false;
        currentPlant = new();
    }
}