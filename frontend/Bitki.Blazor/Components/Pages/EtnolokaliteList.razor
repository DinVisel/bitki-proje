@page "/etnolokalite"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.EtnolokaliteViewModel>
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Etno Lokalite</PageTitle>

<div class="page-container">
    <h1>Etno Lokalite Veritabanı</h1>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="EtnolokaliteViewModel" Items="items" Columns="columns" Title="Etno Lokalite Kayıtları"
            ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="EtnolokaliteViewModel" Item="selectedItem"
                    Title="@($"Etno Lokalite Detayları - {selectedItem.LocalName}")" Fields="inspectorFields"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@code {
    private EtnolokaliteViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "ID", PropertyName = "Id" },
new ColumnDef { Title = "Yerel Ad", PropertyName = "LocalName" },
new ColumnDef { Title = "Konum", PropertyName = "Location" },
new ColumnDef { Title = "Kullanım", PropertyName = "Usage" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
new InspectorField { Label = "Yerel Ad", PropertyName = "LocalName", Editable = true },
new InspectorField { Label = "Konum", PropertyName = "Location", Editable = true },
new InspectorField { Label = "Kullanım", PropertyName = "Usage", Editable = true },
new InspectorField { Label = "İçerik", PropertyName = "Content", Editable = true }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<EtnolokaliteViewModel[]>("api/etnolokalite");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSave(EtnolokaliteViewModel item)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/etnolokalite/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(EtnolokaliteViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.LocalName} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/etnolokalite/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}