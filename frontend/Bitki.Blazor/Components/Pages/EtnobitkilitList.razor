@page "/etnobitkilit"
@using Bitki.Blazor.Models
@inject HttpClient Http

<h3>Etnobotanik Bitki Literatür Listesi</h3>

@if (items == null)
{
    <p><em>Yükleniyor...</em></p>
}
else
{
    <p>Kayıt Sayısı: @items.Length</p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Türkçe Ad</th>
                <th>Durum</th>
                <th>Literatür Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TurkishName</td>
                    <td>@item.Status</td>
                    <td>@item.LiteratureId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private EtnobitkilitViewModel[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<EtnobitkilitViewModel[]>("api/etnobitkilit");
    }
}