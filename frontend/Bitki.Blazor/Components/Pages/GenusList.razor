@page "/genus"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.GenusViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Genus</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Genus (Cins) Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Genus Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="GenusViewModel" Items="items" Columns="columns" Title="Genus Kayıtları" ShowSearch="true"
            IsLoading="isLoading" TotalCount="totalCount" FilteredCount="filteredCount"
            OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="GenusViewModel" Item="selectedItem"
                    Title="@($"Genus Detayları - {selectedItem.Name}")" Fields="inspectorFields" ViewOnly="false"
                    OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Genus Düzenle" : "Yeni Genus Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Ad *</label>
                    <input type="text" class="form-control" @bind="editingItem.Name" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Familya *</label>
                    <SearchableSelect Options="familyOptions" Placeholder="Familya seçin" @bind-Value="EditingFamilyId" />
                </div>
                <div class="form-group">
                    <label class="form-label">Açıklama</label>
                    <textarea class="form-control" rows="3" @bind="editingItem.Description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private GenusViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<GenusViewModel> paginationState = new();
    private FilterRequest currentFilter = new();

    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private GenusViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Ad", PropertyName = "Name" },
new ColumnDef { Title = "Familya", PropertyName = "FamilyName" },
new ColumnDef { Title = "Açıklama", PropertyName = "Description" }
};

    private List<InspectorField> inspectorFields = new();

    protected override async Task OnInitializedAsync()
    {
        inspectorFields = new()
{
new InspectorField { Label = "Ad", PropertyName = "Name", Editable = true },
new InspectorField { Label = "Familya", PropertyName = "FamilyName", Editable = true, RenderEditControl = FamilySelector
},
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
};
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            await EnsureOptionsAsync();
            var response = await Http.PostAsJsonAsync("api/genus/query", currentFilter);
            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<GenusViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else { errorMessage = $"Error: {response.StatusCode}"; }
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    private void OpenAddModal()
    {
        editingItem = new(); EditingFamilyId = null; isEditingInModal = false; showAddModal =
        true;
    }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (string.IsNullOrWhiteSpace(editingItem.Name))
        {
            await JS.InvokeVoidAsync("alert", "Ad zorunludur.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal
            ? await AuthHttp.PutAsJsonAsync($"api/genus/{editingItem.Id}", editingItem)
            : await AuthHttp.PostAsJsonAsync("api/genus", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(GenusViewModel item)
    {
        try
        {
            var response = await AuthHttp.PutAsJsonAsync($"api/genus/{item.Id}", item);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Güncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(GenusViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"{item.Name} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/genus/{item.Id}");
                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }

    private List<SelectOption> familyOptions = new();

    private long? EditingFamilyId
    {
        get => editingItem.FamilyId == 0 ? null : editingItem.FamilyId;
        set
        {
            editingItem.FamilyId = value.HasValue ? (int)value.Value : 0;
            editingItem.FamilyName = familyOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private async Task EnsureOptionsAsync()
    {
        if (!familyOptions.Any())
        {
            var families = await Http.GetFromJsonAsync<List<FamilyaViewModel>>("api/familya") ?? new();
            familyOptions = families.OrderBy(f => f.Name).Select(f => new SelectOption(f.Id, f.Name ?? $"Familya #{f.Id}")).ToList();
        }
    }

    private RenderFragment<GenusViewModel> FamilySelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", familyOptions);
        builder.AddAttribute(2, "Placeholder", "Familya seçin");
        builder.AddAttribute(3, "Value", (long?)item.FamilyId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id =>
    {
        item.FamilyId = id.HasValue ? (int)id.Value : 0;
        item.FamilyName = familyOptions.FirstOrDefault(o => o.Id == id)?.Name ?? item.FamilyName;
    }));
        builder.CloseComponent();
    };
}