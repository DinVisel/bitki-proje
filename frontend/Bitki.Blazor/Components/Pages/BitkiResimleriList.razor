@page "/bitkiresimleri"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.BitkiResimleriViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Bitki Resimleri</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Bitki Resimleri Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Resim Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="BitkiResimleriViewModel" Items="items" Columns="columns" Title="Bitki Resim Kayıtları"
            ShowSearch="true" IsLoading="isLoading" TotalCount="totalCount" FilteredCount="filteredCount"
            OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="BitkiResimleriViewModel" Item="selectedItem"
                    Title="@($"Resim - ID: {selectedItem.Id}")" Fields="inspectorFields" ViewOnly="false"
                    OnSave="HandleSave" OnDelete="HandleDelete">
                    <AdditionalContent Context="item">
                        @if (!string.IsNullOrEmpty(item.ImageLocation))
                        {
                            <div class="mt-3">
                                <h6>Resim Önizleme</h6>
                                <ImageRenderer ImageValue="@item.ImageLocation" AltText="@item.Description"
                                    ThumbnailMode="false" />
                            </div>
                        }
                    </AdditionalContent>
                </RecordInspector>
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Resim Düzenle" : "Yeni Resim Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Bitki *</label>
                    <SearchableSelect Options="plantOptions" Placeholder="Bitki seçin" @bind-Value="EditingPlantId" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Resim Konumu *</label>
                    <input type="text" class="form-control" @bind="editingItem.ImageLocation" />
                </div>
                <div class="form-group">
                    <label class="form-label">Açıklama</label>
                    <textarea class="form-control" rows="2" @bind="editingItem.Description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private BitkiResimleriViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<BitkiResimleriViewModel> paginationState = new();
    private FilterRequest currentFilter = new();

    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private BitkiResimleriViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Bitki Adı", PropertyName = "PlantName" },
new ColumnDef { Title = "Açıklama", PropertyName = "Description" }
};

    private List<InspectorField> inspectorFields = new();

    protected override async Task OnInitializedAsync()
    {
        inspectorFields = new()
{
new InspectorField { Label = "Bitki Adı", PropertyName = "PlantName", Editable = true, RenderEditControl = PlantSelector
},
new InspectorField { Label = "Resim Konumu", PropertyName = "ImageLocation", Editable = true },
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
};
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            await EnsureOptionsAsync();
            var response = await Http.PostAsJsonAsync("api/bitkiresimleri/query", currentFilter);
            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<BitkiResimleriViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else { errorMessage = $"Error: {response.StatusCode}"; }
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    private void OpenAddModal()
    {
        editingItem = new(); EditingPlantId = null; isEditingInModal = false; showAddModal = true;
    }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (EditingPlantId == null || string.IsNullOrWhiteSpace(editingItem.ImageLocation))
        {
            await JS.InvokeVoidAsync("alert", "Bitki ve Resim Konumu zorunludur.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal
            ? await AuthHttp.PutAsJsonAsync($"api/bitkiresimleri/{editingItem.Id}", editingItem)
            : await AuthHttp.PostAsJsonAsync("api/bitkiresimleri", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(BitkiResimleriViewModel item)
    {
        try
        {
            SyncPlant(item);
            var response = await AuthHttp.PutAsJsonAsync($"api/bitkiresimleri/{item.Id}", item);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Güncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(BitkiResimleriViewModel item)
    {
        var label = $"{item.PlantName} resmi";
        if (await JS.InvokeAsync<bool>("confirm", $"{label} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/bitkiresimleri/{item.Id}");
                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }

    private List<SelectOption> plantOptions = new();

    private long? EditingPlantId
    {
        get => editingItem.PlantId == 0 ? null : editingItem.PlantId;
        set
        {
            editingItem.PlantId = value.HasValue ? (int)value.Value : 0;
            editingItem.PlantName = plantOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private async Task EnsureOptionsAsync()
    {
        if (!plantOptions.Any())
        {
            var plants = await Http.GetFromJsonAsync<List<Plant>>("api/bitki") ?? new();
            plantOptions = plants.OrderBy(p => p.Name).Select(p => new SelectOption(p.Id, p.Name ?? $"Bitki #{p.Id}")).ToList();
        }
    }

    private void SyncPlant(BitkiResimleriViewModel item)
    {
        item.PlantName = plantOptions.FirstOrDefault(o => o.Id == item.PlantId)?.Name ?? item.PlantName;
    }

    private RenderFragment<BitkiResimleriViewModel> PlantSelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", plantOptions);
        builder.AddAttribute(2, "Placeholder", "Bitki seçin");
        builder.AddAttribute(3, "Value", (long?)item.PlantId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id =>
        {
            item.PlantId = id.HasValue ?
    (int)id.Value : 0; SyncPlant(item);
        }));
        builder.CloseComponent();
    };
}