@page "/bitkires

imleri"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.BitkiResimleriViewModel>
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Bitki Resimleri</PageTitle>

<div class="page-container">
    <h1>Bitki Resimleri Veritabanı</h1>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="BitkiResimleriViewModel" Items="items" Columns="columns" Title="Bitki Resim Kayıtları" ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="BitkiResimleriViewModel" Item="selectedItem"
                    Title="@($"Bitki Resim Detayları - ID: {selectedItem.Id}")" Fields="inspectorFields" OnSave="HandleSave"
                    OnDelete="HandleDelete">
                    <AdditionalContent Context="item">
                        @if (!string.IsNullOrEmpty(item.ImageLocation))
                        {
                            <div class="mt-3">
                                <h6>Resim Önizleme</h6>
                                <ImageRenderer ImageValue="@item.ImageLocation" AltText="@item.Description" ThumbnailMode="false" />
                            </div>
                        }
                    </AdditionalContent>
                </RecordInspector>
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@code {
    private BitkiResimleriViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;

    private List<ColumnDef> columns = new()
    {
        new ColumnDef { Title = "ID", PropertyName = "Id" },
        new ColumnDef { Title = "Bitki ID", PropertyName = "PlantId" },
        new ColumnDef { Title = "Açıklama", PropertyName = "Description" }
    };

    private List<InspectorField> inspectorFields = new()
    {
        new InspectorField { Label = "ID", PropertyName = "Id", Editable = false },
        new InspectorField { Label = "Bitki ID", PropertyName = "PlantId", Editable = true },
        new InspectorField { Label = "Resim Konumu", PropertyName = "ImageLocation", Editable = true },
        new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            items = await Http.GetFromJsonAsync<BitkiResimleriViewModel[]>("api/bitkires

imleri");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSave(BitkiResimleriViewModel item)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/bitkires

imleri/{item.Id}", item);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Kayıt başarıyla güncellendi");
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Güncelleme hatası: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task HandleDelete(BitkiResimleriViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"ID {item.Id} kaydını silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/bitkires

imleri/{item.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Kayıt başarıyla silindi");
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Silme hatası: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
            }
        }
    }
}