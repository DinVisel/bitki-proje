@page "/ulke"
@using Bitki.Blazor.Models
@inject HttpClient Http

<h1>Ülke Listesi</h1>

@if (items == null)
{
    <div class="loading-indicator">
        <div class="spinner-border spinner-border-sm text-secondary" role="status"></div>
        Veriler yükleniyor...
    </div>
}
else
{
    <div class="record-count">Kayıt Sayısı: @items.Length</div>

    <div class="table-responsive">
        <table class="table academic-table">
            <thead>
                <tr>
                    <th class="text-numeric" style="width: 80px;">Id</th>
                    <th>Ad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <td class="text-numeric text-muted">@item.Id</td>
                        <td class="fw-medium">@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private UlkeViewModel[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<UlkeViewModel[]>("api/ulke");
    }
}