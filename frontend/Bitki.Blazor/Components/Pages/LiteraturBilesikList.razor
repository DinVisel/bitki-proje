@page "/literaturbilesik"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.LiteraturBilesikViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Literatür Bileşik</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Literatür Bileşik Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="LiteraturBilesikViewModel" Items="items" Columns="columns"
            Title="Literatür Bileşik Kayıtları" ShowSearch="true" IsLoading="isLoading" TotalCount="totalCount"
            FilteredCount="filteredCount" OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="LiteraturBilesikViewModel" Item="selectedItem"
                    Title="@($"Literatür - Bileşik Detayı")" Fields="inspectorFields" ViewOnly="false" OnSave="HandleSave"
                    OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Düzenle" : "Yeni Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Literatür *</label>
                    <SearchableSelect Options="literatureOptions" Placeholder="Literatür seçin"
                                      @bind-Value="EditingLiteratureId" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Bileşik *</label>
                    <SearchableSelect Options="compoundOptions" Placeholder="Bileşik seçin"
                                      @bind-Value="EditingCompoundId" />
                </div>
                <div class="form-group">
                    <label class="form-label">Açıklama</label>
                    <textarea class="form-control" rows="2" @bind="editingItem.Description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private LiteraturBilesikViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<LiteraturBilesikViewModel> paginationState = new();
    private FilterRequest currentFilter = new();

    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private LiteraturBilesikViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Literatür", PropertyName = "LiteratureName" },
new ColumnDef { Title = "Bileşik", PropertyName = "CompoundName" },
new ColumnDef { Title = "Açıklama", PropertyName = "Description" }
};

    private List<InspectorField> inspectorFields = new()
{
new InspectorField { Label = "Literatür", PropertyName = "LiteratureName", Editable = true, RenderEditControl = LiteratureSelector },
new InspectorField { Label = "Bileşik", PropertyName = "CompoundName", Editable = true, RenderEditControl = CompoundSelector },
new InspectorField { Label = "Açıklama", PropertyName = "Description", Editable = true }
};

    protected override async Task OnInitializedAsync() => await LoadDataWithFilter();

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            await EnsureOptionsAsync();
            var response = await Http.PostAsJsonAsync("api/literaturbilesik/query", currentFilter);
            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<LiteraturBilesikViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else { errorMessage = $"Error: {response.StatusCode}"; }
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    private void OpenAddModal() { editingItem = new(); EditingLiteratureId = null; EditingCompoundId = null; isEditingInModal = false; showAddModal = true; }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (EditingLiteratureId == null || EditingCompoundId == null)
        {
            await JS.InvokeVoidAsync("alert", "Literatür ve Bileşik seçilmelidir.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal
            ? await AuthHttp.PutAsJsonAsync($"api/literaturbilesik/{editingItem.Id}", editingItem)
            : await AuthHttp.PostAsJsonAsync("api/literaturbilesik", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(LiteraturBilesikViewModel item)
    {
        try
        {
            SyncNames(item);
            var r = await AuthHttp.PutAsJsonAsync($"api/literaturbilesik/{item.Id}", item);
            if (r.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Güncellendi");
                await LoadDataWithFilter();
            }
            else if (r.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (r.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(LiteraturBilesikViewModel item)
    {
        var label = $"{item.LiteratureName} - {item.CompoundName}";
        if (await JS.InvokeAsync<bool>("confirm", $"{label} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/literaturbilesik/{item.Id}");
                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }

    private List<SelectOption> literatureOptions = new();
    private List<SelectOption> compoundOptions = new();

    private long? EditingLiteratureId
    {
        get => editingItem.LiteratureId == 0 ? null : editingItem.LiteratureId;
        set
        {
            editingItem.LiteratureId = value.HasValue ? (int)value.Value : 0;
            editingItem.LiteratureName = literatureOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private long? EditingCompoundId
    {
        get => editingItem.CompoundId == 0 ? null : editingItem.CompoundId;
        set
        {
            editingItem.CompoundId = value.HasValue ? (int)value.Value : 0;
            editingItem.CompoundName = compoundOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private async Task EnsureOptionsAsync()
    {
        if (!literatureOptions.Any())
        {
            var literature = await Http.GetFromJsonAsync<List<LiteraturViewModel>>("api/literatur") ?? new();
            literatureOptions = literature
                .OrderBy(l => l.FullName ?? l.ResearchName ?? l.AuthorName)
                .Select(l => new SelectOption(l.Id, l.FullName ?? l.ResearchName ?? l.AuthorName ?? $"Literatür #{l.Id}"))
                .ToList();
        }

        if (!compoundOptions.Any())
        {
            var compounds = await Http.GetFromJsonAsync<List<BilesiklerViewModel>>("api/bilesikler") ?? new();
            compoundOptions = compounds.OrderBy(c => c.Name).Select(c => new SelectOption(c.Id, c.Name ?? $"Bileşik #{c.Id}")).ToList();
        }
    }

    private void SyncNames(LiteraturBilesikViewModel item)
    {
        item.LiteratureName = literatureOptions.FirstOrDefault(o => o.Id == item.LiteratureId)?.Name ?? item.LiteratureName;
        item.CompoundName = compoundOptions.FirstOrDefault(o => o.Id == item.CompoundId)?.Name ?? item.CompoundName;
    }

    private RenderFragment<LiteraturBilesikViewModel> LiteratureSelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", literatureOptions);
        builder.AddAttribute(2, "Placeholder", "Literatür seçin");
        builder.AddAttribute(3, "Value", (long?)item.LiteratureId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id => { item.LiteratureId = id.HasValue ? (int)id.Value : 0; SyncNames(item); }));
        builder.CloseComponent();
    };

    private RenderFragment<LiteraturBilesikViewModel> CompoundSelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", compoundOptions);
        builder.AddAttribute(2, "Placeholder", "Bileşik seçin");
        builder.AddAttribute(3, "Value", (long?)item.CompoundId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id => { item.CompoundId = id.HasValue ? (int)id.Value : 0; SyncNames(item); }));
        builder.CloseComponent();
    };
}
