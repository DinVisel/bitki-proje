@page "/literaturbilesik"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.LiteraturBilesikViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Literatür Bileşik</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Literatür Bileşik Veritabanı</h1>
        <AuthorizeView Roles="Admin">
            <Authorized><button class="btn btn-success add-new-btn" @onclick="OpenAddModal"><span>➕</span> Yeni
                    Ekle</button></Authorized>
        </AuthorizeView>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (errorMessage != null)
    {

        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="LiteraturBilesikViewModel" Items="items" Columns="columns"
            Title="Literatür Bileşik Kayıtları" ShowSearch="true">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="LiteraturBilesikViewModel" Item="selectedItem"
                    Title="@($"Literatür Bileşik - ID: {selectedItem.Id}")" Fields="inspectorFields" OnSave="HandleSave"
                    OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "Düzenle" : "Yeni Ekle")</h5><button type="button" class="btn-close"
                    @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3"><label class="form-label">Literatür ID *</label><input type="number"
                        class="form-control" @bind="editingItem.LiteratureId" /></div>
                <div class="form-group mb-3"><label class="form-label">Bileşik ID *</label><input type="number"
                        class="form-control" @bind="editingItem.CompoundId" /></div>
                <div class="form-group"><label class="form-label">Açıklama</label><textarea class="form-control" rows="2"
                        @bind="editingItem.Description"></textarea></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">@if (isCreating) {
                    <span class="spinner-border spinner-border-sm me-1"></span>
            }
 @(isEditingInModal ? "Güncelle" :
                                "Kaydet")</button>
        </div>
    </div>
</div>
}

@code {
    private LiteraturBilesikViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private LiteraturBilesikViewModel editingItem = new();

    private List<ColumnDef> columns = new() { new ColumnDef { Title = "ID", PropertyName = "Id" }, new ColumnDef { Title =
"Literatür ID", PropertyName = "LiteratureId" }, new ColumnDef { Title = "Bileşik ID", PropertyName = "CompoundId" },
new ColumnDef { Title = "Açıklama", PropertyName = "Description" } };
    private List<InspectorField> inspectorFields = new() { new InspectorField { Label = "ID", PropertyName = "Id", Editable
= false }, new InspectorField { Label = "Literatür ID", PropertyName = "LiteratureId", Editable = true }, new
InspectorField { Label = "Bileşik ID", PropertyName = "CompoundId", Editable = true }, new InspectorField { Label =
"Açıklama", PropertyName = "Description", Editable = true } };

    protected override async Task OnInitializedAsync() => await LoadData();
    private async Task LoadData()
    {
        isLoading = true; errorMessage = null; try
        {
            items = await
    Http.GetFromJsonAsync<LiteraturBilesikViewModel[]>("api/literaturbilesik");
        }
        catch (Exception ex)
        {
            errorMessage =
    $"Error: {ex.Message}";
        }
        finally { isLoading = false; }
    }
    private void OpenAddModal() { editingItem = new(); isEditingInModal = false; showAddModal = true; }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (editingItem.LiteratureId == 0 || editingItem.CompoundId == 0) { await JS.InvokeVoidAsync("alert", "Literatür ve Bileşik ID zorunludur."); return; }
        isCreating = true;
        try
        {
            var response = isEditingInModal ? await AuthHttp.PutAsJsonAsync($"api/literaturbilesik/{editingItem.Id}", editingItem) :
            await AuthHttp.PostAsJsonAsync("api/literaturbilesik", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal(); await LoadData();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized) { await JS.InvokeVoidAsync("alert", "Giriş yapın."); }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden) { await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli."); }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(LiteraturBilesikViewModel item)
    {
        try
        {
            var r = await
    AuthHttp.PutAsJsonAsync($"api/literaturbilesik/{item.Id}", item); if (r.IsSuccessStatusCode)
            {
                await
    JS.InvokeVoidAsync("alert", "Güncellendi"); await LoadData();
            }
            else if (r.StatusCode ==
    System.Net.HttpStatusCode.Unauthorized) await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            else if (r.StatusCode ==
    System.Net.HttpStatusCode.Forbidden) await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            else await
    JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}");
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(LiteraturBilesikViewModel item)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"ID {item.Id} silinsin mi?"))
        {
            try
            {
                var r = await AuthHttp.DeleteAsync($"api/literaturbilesik/{item.Id}"); if
    (r.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Silindi"); await LoadData(); }
                else if (r.StatusCode ==
    System.Net.HttpStatusCode.Unauthorized) await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                else if (r.StatusCode ==
    System.Net.HttpStatusCode.Forbidden) await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                else await
    JS.InvokeVoidAsync("alert", $"Hata: {r.StatusCode}");
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }
}