@page "/ucucuyagbilesik"
@rendermode InteractiveServer
@using Bitki.Blazor.Models
@using Bitki.Blazor.Components.Common
@using Bitki.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using static Bitki.Blazor.Components.Common.RecordInspector<Bitki.Blazor.Models.UcucuYagBilesikViewModel>
@inject HttpClient Http
@inject AuthenticatedHttpClient AuthHttp
@inject IJSRuntime JS

<PageTitle>Uçucu Yağ Bileşik</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Uçucu Yağ Bileşik İlişkileri</h1>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <button class="btn btn-success add-new-btn" @onclick="OpenAddModal">
                    <span>➕</span> Yeni İlişki Ekle
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <RecordExplorer TItem="UcucuYagBilesikViewModel" Items="items" Columns="columns" Title="Uçucu Yağ-Bileşik Kayıtları"
            ShowSearch="true" IsLoading="isLoading" TotalCount="totalCount" FilteredCount="filteredCount"
            OnSearchChanged="HandleSearchChanged" OnSortChanged="HandleSortChanged">
            <InspectorContent Context="selectedItem">
                <RecordInspector TItem="UcucuYagBilesikViewModel" Item="selectedItem" Title="Uçucu Yağ-Bileşik"
                    Fields="inspectorFields" ViewOnly="false" OnSave="HandleSave" OnDelete="HandleDelete" />
            </InspectorContent>
        </RecordExplorer>

        <PaginationControls CurrentPage="@paginationState.PageNumber" PageSize="@paginationState.PageSize"
            TotalPages="@paginationState.TotalPages" TotalRecords="@paginationState.FilteredCount"
            StartRecord="@paginationState.StartRecord" EndRecord="@paginationState.EndRecord"
            HasPreviousPage="@paginationState.HasPreviousPage" HasNextPage="@paginationState.HasNextPage"
            IsLoading="@isLoading" OnPageChanged="HandlePageChanged" />
    }
</div>

@if (showAddModal)
{
    <div class="modal-overlay" @onclick="CloseAddModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5>@(isEditingInModal ? "İlişki Düzenle" : "Yeni İlişki Ekle")</h5>
                <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label class="form-label">Uçucu Yağ *</label>
                    <SearchableSelect Options="essentialOilOptions" Placeholder="Uçucu yağ seçin"
                        @bind-Value="EditingEssentialOilId" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Bileşik *</label>
                    <SearchableSelect Options="compoundOptions" Placeholder="Bileşik seçin"
                        @bind-Value="EditingCompoundId" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Miktar</label>
                    <input type="text" class="form-control" @bind="editingItem.Amount" />
                </div>
                <div class="form-group">
                    <label class="form-label">Birim</label>
                    <input type="text" class="form-control" @bind="editingItem.Unit" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseAddModal">İptal</button>
                <button class="btn btn-success" @onclick="HandleCreateOrUpdate" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    @(isEditingInModal ? "Güncelle" : "Kaydet")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private UcucuYagBilesikViewModel[]? items;
    private bool isLoading = true;
    private string? errorMessage;
    private int? totalCount;
    private int? filteredCount;
    private FilterResponse<UcucuYagBilesikViewModel> paginationState = new();
    private FilterRequest currentFilter = new();

    private bool showAddModal = false;
    private bool isCreating = false;
    private bool isEditingInModal = false;
    private UcucuYagBilesikViewModel editingItem = new();

    private List<ColumnDef> columns = new()
{
new ColumnDef { Title = "Uçucu Yağ", PropertyName = "EssentialOilName" },
new ColumnDef { Title = "Bileşik", PropertyName = "CompoundName" },
new ColumnDef { Title = "Miktar", PropertyName = "Amount" },
new ColumnDef { Title = "Birim", PropertyName = "Unit" }
};

    private List<InspectorField> inspectorFields = new();

    protected override async Task OnInitializedAsync()
    {
        inspectorFields = new()
{
new InspectorField { Label = "Uçucu Yağ", PropertyName = "EssentialOilName", Editable = true, RenderEditControl =
EssentialOilSelector },
new InspectorField { Label = "Bileşik", PropertyName = "CompoundName", Editable = true, RenderEditControl =
CompoundSelector },
new InspectorField { Label = "Miktar", PropertyName = "Amount", Editable = true },
new InspectorField { Label = "Birim", PropertyName = "Unit", Editable = true }
};
        await LoadDataWithFilter();
    }

    private async Task LoadDataWithFilter()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            await EnsureOptionsAsync();
            var response = await Http.PostAsJsonAsync("api/ucucuyagbilesik/query", currentFilter);
            if (response.IsSuccessStatusCode)
            {
                var filterResponse = await response.Content.ReadFromJsonAsync<FilterResponse<UcucuYagBilesikViewModel>>();
                if (filterResponse != null)
                {
                    items = filterResponse.Data.ToArray();
                    totalCount = filterResponse.TotalCount;
                    filteredCount = filterResponse.FilteredCount;
                    paginationState = filterResponse;
                }
            }
            else { errorMessage = $"Error: {response.StatusCode}"; }
        }
        catch (Exception ex) { errorMessage = $"Error: {ex.Message}"; }
        finally { isLoading = false; }
    }

    private async Task HandleSearchChanged(string searchText)
    {
        currentFilter.SearchText = searchText;
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandleSortChanged((string column, bool ascending) sort)
    {
        currentFilter.SortColumn = sort.column;
        currentFilter.SortDirection = sort.ascending ? "ASC" : "DESC";
        currentFilter.PageNumber = 1;
        await LoadDataWithFilter();
    }

    private async Task HandlePageChanged((int page, int pageSize) pagination)
    {
        currentFilter.PageNumber = pagination.page;
        currentFilter.PageSize = pagination.pageSize;
        await LoadDataWithFilter();
    }

    private void OpenAddModal()
    {
        editingItem = new(); EditingEssentialOilId = null; EditingCompoundId = null;
        isEditingInModal = false; showAddModal = true;
    }
    private void CloseAddModal() { showAddModal = false; editingItem = new(); isEditingInModal = false; }

    private async Task HandleCreateOrUpdate()
    {
        if (EditingEssentialOilId == null || EditingCompoundId == null)
        {
            await JS.InvokeVoidAsync("alert", "Uçucu Yağ ve Bileşik seçilmelidir.");
            return;
        }
        isCreating = true;
        try
        {
            var response = isEditingInModal
            ? await AuthHttp.PutAsJsonAsync($"api/ucucuyagbilesik/{editingItem.EssentialOilId}/{editingItem.CompoundId}",
            editingItem)
            : await AuthHttp.PostAsJsonAsync("api/ucucuyagbilesik", editingItem);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isEditingInModal ? "Güncellendi!" : "Eklendi!");
                CloseAddModal();
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        finally { isCreating = false; }
    }

    private async Task HandleSave(UcucuYagBilesikViewModel item)
    {
        try
        {
            SyncNames(item);
            var response = await AuthHttp.PutAsJsonAsync($"api/ucucuyagbilesik/{item.EssentialOilId}/{item.CompoundId}", item);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Güncellendi");
                await LoadDataWithFilter();
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                await JS.InvokeVoidAsync("alert", "Giriş yapın.");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
            }
            else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task HandleDelete(UcucuYagBilesikViewModel item)
    {
        var label = $"{item.EssentialOilName} - {item.CompoundName}";
        if (await JS.InvokeAsync<bool>("confirm", $"{label} silinsin mi?"))
        {
            try
            {
                var response = await AuthHttp.DeleteAsync($"api/ucucuyagbilesik/{item.EssentialOilId}/{item.CompoundId}");
                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Silindi");
                    await LoadDataWithFilter();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    await JS.InvokeVoidAsync("alert", "Giriş yapın.");
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                {
                    await JS.InvokeVoidAsync("alert", "Admin yetkisi gerekli.");
                }
                else { await JS.InvokeVoidAsync("alert", $"Hata: {response.StatusCode}"); }
            }
            catch (Exception ex) { await JS.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
        }
    }

    private List<SelectOption> essentialOilOptions = new();
    private List<SelectOption> compoundOptions = new();

    private long? EditingEssentialOilId
    {
        get => editingItem.EssentialOilId == 0 ? null : editingItem.EssentialOilId;
        set
        {
            editingItem.EssentialOilId = value.HasValue ? (int)value.Value : 0;
            editingItem.EssentialOilName = essentialOilOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private long? EditingCompoundId
    {
        get => editingItem.CompoundId == 0 ? null : editingItem.CompoundId;
        set
        {
            editingItem.CompoundId = value.HasValue ? (int)value.Value : 0;
            editingItem.CompoundName = compoundOptions.FirstOrDefault(o => o.Id == value)?.Name;
        }
    }

    private async Task EnsureOptionsAsync()
    {
        if (!essentialOilOptions.Any())
        {
            var oils = await Http.GetFromJsonAsync<List<UcuyagViewModel>>("api/ucuyag") ?? new();
            essentialOilOptions = oils.OrderBy(o => o.Name).Select(o => new SelectOption(o.Id, o.Name ?? $"Uçucu Yağ #{o.Id}")).ToList();
        }

        if (!compoundOptions.Any())
        {
            var compounds = await Http.GetFromJsonAsync<List<BilesiklerViewModel>>("api/bilesikler") ?? new();
            compoundOptions = compounds.OrderBy(c => c.Name).Select(c => new SelectOption(c.Id, c.Name ?? $"Bileşik #{c.Id}")).ToList();
        }
    }

    private void SyncNames(UcucuYagBilesikViewModel item)
    {
        item.EssentialOilName = essentialOilOptions.FirstOrDefault(o => o.Id == item.EssentialOilId)?.Name ??
        item.EssentialOilName;
        item.CompoundName = compoundOptions.FirstOrDefault(o => o.Id == item.CompoundId)?.Name ?? item.CompoundName;
    }

    private RenderFragment<UcucuYagBilesikViewModel> EssentialOilSelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", essentialOilOptions);
        builder.AddAttribute(2, "Placeholder", "Uçucu yağ seçin");
        builder.AddAttribute(3, "Value", (long?)item.EssentialOilId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id =>
        {
            item.EssentialOilId =
    id.HasValue ? (int)id.Value : 0; SyncNames(item);
        }));
        builder.CloseComponent();
    };

    private RenderFragment<UcucuYagBilesikViewModel> CompoundSelector => item => builder =>
    {
        builder.OpenComponent<SearchableSelect>(0);
        builder.AddAttribute(1, "Options", compoundOptions);
        builder.AddAttribute(2, "Placeholder", "Bileşik seçin");
        builder.AddAttribute(3, "Value", (long?)item.CompoundId);
        builder.AddAttribute(4, "ValueChanged", EventCallback.Factory.Create<long?>(this, id =>
        {
            item.CompoundId = id.HasValue
    ? (int)id.Value : 0; SyncNames(item);
        }));
        builder.CloseComponent();
    };
}