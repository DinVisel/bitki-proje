@page "/ucucuyagbilesik"
@using Bitki.Blazor.Models
@inject HttpClient Http

<h3>Uçucu Yağ Bileşik Listesi</h3>

@if (items == null)
{
    <p><em>Yükleniyor...</em></p>
}
else
{
    <p>Kayıt Sayısı: @items.Length</p>
    <table class="table">
        <thead>
            <tr>
                <th>Uçucu Yağ Id</th>
                <th>Bileşik Id</th>
                <th>Miktar</th>
                <th>Birim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.EssentialOilId</td>
                    <td>@item.CompoundId</td>
                    <td>@item.Amount</td>
                    <td>@item.Unit</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private UcucuYagBilesikViewModel[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<UcucuYagBilesikViewModel[]>("api/ucucuyagbilesik");
    }
}